{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++11",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "./timer/lst_timer.cpp",
                "./http/http_conn.cpp",
                "./log/log.cpp",
                "./sql/sql_connection_pool.cpp",
                "webserver.cpp",
                "config.cpp",
                "-o",
                "${fileDirname}/server",
                "-lpthread",
                "-lmysqlclient"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}